<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/text">

        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="280dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image001"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#d60606"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/sale01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GIẢM 30%"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/name01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image001"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Demo"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/price_new01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name01"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="#d64400"
                    android:maxLines="3"
                    android:text="340.000 đ" />

                <View
                    android:layout_width="65dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="265dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black"
                    android:drawablePadding="10dp" />
                <TextView
                    android:id="@+id/price_old01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name01"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="10dp"
                    android:textSize="13sp"
                    android:text="440.000 đ" />
                <RatingBar
                    style = "?android:attr/ratingBarStyleSmall"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="232dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/yello1"
                    android:clickable="false"
                    android:isIndicator="true"
                    android:rating="4.5">
                </RatingBar>
                <TextView
                    android:id="@+id/rating01"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="248dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="@color/yello1"
                    android:text="4.5/5" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>